@model EditUserInfoVM
@{
    Layout = "_Layout";
}

<div class="form-container">
    <h3>Ändra användaruppgifter för @Model.Username</h3>
    <br />
    <form asp-controller="User" asp-action="UpdateUserInfo">
        <label asp-for="@Model.Firstname">Förnamn</label>
        <input asp-for="@Model.Firstname" />
        <span asp-validation-for="@Model.Firstname"></span>
        <br />
        <label asp-for="@Model.Lastname">Efternamn</label>
        <input asp-for="@Model.Lastname" />
        <span asp-validation-for="@Model.Lastname"></span>
        <br />
        <label asp-for="@Model.Street">Gatuadress</label>
        <input asp-for="@Model.Street" />
        <span asp-validation-for="@Model.Street"></span>
        <br />
        <label asp-for="@Model.Zipcode">Postnummer</label>
        <input asp-for="@Model.Zipcode" />
        <span asp-validation-for="@Model.Zipcode"></span>
        <br />
        <label asp-for="@Model.City">Postadress</label>
        <input asp-for="@Model.City" />
        <span asp-validation-for="@Model.City"></span>
        <br />
        <label asp-for="@Model.Phonenumber">Personnummer</label>
        <input asp-for="@Model.Phonenumber" />
        <span asp-validation-for="@Model.Phonenumber"></span>
        <br />
        <br />
        <input class="btn" type="submit" value="Ändra" />
    </form>
</div>

@section scripts{
    <link href="~/Styles/UpdateUserStyleSheet.css" rel="stylesheet" />
}