@using svAmplifier.Controllers

@{
    Layout = "_Layout";
}


@section scripts{
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery-jvectormap-2.0.3.min.js"></script>
    <script src="~/Scripts/jquery-jvectormap-se-merc.js"></script>
    <script>
        $(function () {
            $('#map').vectorMap({
                map: 'se_merc',
                backgroundColor: "",
                onRegionClick: function (event, code) {
                    let url = "@Url.Action(nameof(UserController.Market), "User")";
                    window.location.href = url + "/" + code;
                } });
        });
    </script>
    <link href="~/Styles/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
    <link href="~/Styles/SwedenMapStyleSheet.css" rel="stylesheet" />
}
<div id="mapContainer">
    <div id="swedenMapText">
        <span>Karta</span>
        <h3>Vänligen välj vilket län du vill shoppa i</h3>
        <div class="left-Img">
            <img src="http://sandvikssamfallighet.se/index-filer/Kartor/Bilder/Sandvik.gif" class="leftDiv">
        </div>
    </div>
    <div id="map"></div>
</div>
